<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".SigninActivity">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="144dp">

        <TextView
            android:id="@+id/text_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_y="5dp"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_y="10dp"
            android:layout_x="10dp"
            android:background="#000000"
            app:srcCompat="@drawable/abc_vector_test" />

        <View
            android:layout_y="50dp"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#FFFFFF"/>

        <EditText
            android:id="@+id/input_id"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_x="60dp"
            android:layout_y="150dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="text"
            android:hint="아이디"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="330dp" />

        <Button
            android:id="@+id/btn_id_check"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_x="270dp"
            android:layout_y="150dp"
            android:background="#999999"
            android:text="중복확인"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="379dp" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_x="60dp"
            android:layout_y="205dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPassword"
            android:text=""
            android:hint="비밀번호"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="275dp" />

        <EditText
            android:id="@+id/input_password_check"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_x="60dp"
            android:layout_y="260dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPassword"
            android:text=""
            android:hint="비밀번호 확인"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="275dp" />

        <EditText
            android:id="@+id/input_birthday"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_x="60dp"
            android:layout_y="315dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPassword"
            android:text=""
            android:hint="생년월일(8자리 입력)"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="275dp" />

        <RadioGroup
            android:id="@+id/gender_group"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_x="60dp"
            android:layout_y="370dp"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <RadioButton
                android:id="@+id/rg_btn2"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:text="남성" />

            <RadioButton
                android:id="@+id/rg_btn1"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:text="여성" />

        </RadioGroup>

        <RadioButton
            android:id="@+id/btn_terms"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_x="60dp"
            android:layout_y="440dp"
            android:background="#FFFFFF"
            android:text="이용약관 동의" />

        <RadioButton
            android:id="@+id/btn_privacy"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_x="60dp"
            android:layout_y="485dp"
            android:background="#FFFFFF"
            android:text="개인정보 취급방침 동의" />

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_x="60dp"
            android:layout_y="568dp"
            android:background="#000000"
            android:text="회원가입"
            android:textColor="#FFFFFF" />

    </AbsoluteLayout>


</androidx.constraintlayout.widget.ConstraintLayout>